<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/bg_star"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="375:1253"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_timer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_balance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="0"
            android:drawableStart="@drawable/yhc_small"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:background="@drawable/bg_black3_12dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_turn"
            app:layout_constraintTop_toBottomOf="@id/tv_timer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="250dp"
            android:text="第0轮"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_1"
            app:layout_constraintTop_toBottomOf="@id/tv_turn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_turn_gold"
            android:text="本轮可投入"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_turn_gold"
            android:textColor="#FFF23D"
            android:text="@string/turn_gold"
            app:layout_constraintStart_toEndOf="@id/tv_1"
            app:layout_constraintEnd_toStartOf="@id/tv_2"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_2"
            app:layout_constraintTop_toBottomOf="@id/tv_turn"
            app:layout_constraintStart_toEndOf="@id/tv_turn_gold"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="星币"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_turn_gold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@drawable/selector_join_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_join"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_total_gold"
            android:id="@+id/tv_joined_count"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_11"
            android:text="已参与人数：0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_join"
            app:layout_constraintStart_toEndOf="@id/tv_joined_count"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_total_gold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_11"
            android:text="星币总价值：0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rule"
            app:layout_constraintTop_toBottomOf="@id/tv_joined_count"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="12sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_star"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_rule"
            android:layout_marginTop="@dimen/dp_11"
            android:paddingTop="74dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="40dp"
            android:background="@drawable/bg_star_list"
            app:layout_constraintDimensionRatio="343:539"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="158dp"
            android:gravity="center"
            android:id="@+id/ll_opening">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:text="开奖中"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <FrameLayout
                android:layout_width="340dp"
                android:layout_marginTop="21dp"
                android:layout_height="187dp"
                android:background="@drawable/kaijiangzhong">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/iv_end"
                    app:roundAsCircle="true"
                    app:actualImageScaleType="centerCrop"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:visibility="gone"
                    app:placeholderImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/avatar2"/>
                <com.siyecaoi.yy.view.AutoVerticalScrollImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/iv_anim"
                    android:visibility="gone"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本轮幸运星"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>