<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5C893">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1990dp"
            android:src="@drawable/bg_act"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"/>
        <FrameLayout
            android:id="@+id/fl_total"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:minWidth="146dp"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="375dp"
            android:background="@drawable/bg_total_score">
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"
                android:text="0"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/act_gold_total"
                android:gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_rank"
            app:layout_constraintTop_toBottomOf="@id/fl_total"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>