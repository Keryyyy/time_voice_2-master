<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_giftall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_show_giftall"
        android:layout_width="240dp"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_centerHorizontal="true"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginEnd="@dimen/dp_1"
            android:src="@drawable/shape_r40_s2_b9d551"
            android:visibility="visible" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_one_giftall"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:roundAsCircle="true"
            android:layout_marginStart="8dp"
            app:roundingBorderColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintStart_toStartOf="@id/iv"

            app:roundingBorderWidth="1dp" />
        <TextView
            android:id="@+id/tv_one_giftall"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/iv_one_giftall"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/dp_2"
            android:text="可乐1111111111"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过砸蛋获得了"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toBottomOf="@id/tv_one_giftall"
            app:layout_constraintStart_toStartOf="@id/tv_one_giftall"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/gif_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夏日啤酒"
            android:textColor="#9063D6"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_one_giftall"
            app:layout_constraintStart_toStartOf="@id/tv_one_giftall"/>

        <TextView
            android:id="@+id/gif_jiazhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="#9063D6"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/gif_name"
            app:layout_constraintStart_toEndOf="@id/gif_name"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_gift_giftall"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toStartOf="@id/tv_number_giftall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_number_giftall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:text="X1"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"
            app:layout_constraintEnd_toEndOf="@id/iv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_85"
        android:layout_marginEnd="@dimen/dp_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:minWidth="@dimen/dp_42">




        </RelativeLayout>


        <LinearLayout
            android:id="@+id/textView_ll"
            android:layout_width="wrap_content"
            android:orientation="vertical"
           android:layout_toRightOf="@+id/relativeLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            </LinearLayout>
        </LinearLayout>





    </RelativeLayout>

    <View
        android:id="@+id/view_close_giftall"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_55"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_goto_giftall"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_65"
        android:layout_below="@id/ll_show_giftall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_giftall"
        android:drawableEnd="@drawable/go_giftall"
        android:gravity="center"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_40"
        android:text="前往围观"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="invisible" />


</RelativeLayout>
