<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:background="@drawable/bg_rank_room"
                />
            <RadioGroup
                android:id="@+id/rg_top"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/top_bar_bg"
                android:orientation="horizontal"
                android:padding="@dimen/dp_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/rb_day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/selector_room_rank"
                    android:button="@null"
                    android:checked="true"
                    android:paddingStart="20dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="6dp"
                    android:text="日榜"
                    android:background="@drawable/selector_bar_room"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_week"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/selector_room_rank"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:paddingStart="20dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/selector_bar_room"
                    android:text="周榜"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rb_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_all"
                    android:button="@null"
                    android:paddingStart="20dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="20dp"
                    android:visibility="gone"
                    android:paddingBottom="6dp"
                    android:text="总榜"
                    android:textColor="@color/selector_white_black"
                    android:textSize="12sp" />
            </RadioGroup>

            <cn.sinata.xldutils.view.SwipeRefreshRecyclerLayout
                android:id="@+id/mSwipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/rg_top"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="83dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#99141931">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_my"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:actualImageScaleType="centerCrop"
                    android:layout_marginLeft="32dp"
                    android:layout_centerVertical="true"
                    app:placeholderImage="@drawable/avatar"
                    app:roundAsCircle="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_my"
                    android:layout_toRightOf="@id/iv_my"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    tools:text="哈哈"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_my_num"
                    android:textColor="#9FA3B0"
                    android:textSize="10sp"
                    android:layout_below="@id/tv_my"
                    tools:text="ID:2233445"
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@id/tv_my"/>
                <TextView
                    android:id="@+id/tv_my_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="24sp"
                    android:layout_marginRight="35dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>