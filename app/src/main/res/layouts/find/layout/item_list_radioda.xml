<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_radioda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:paddingVertical="@dimen/dp_8"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_header_radioda"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_head"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/iv_sex_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_header_radioda"
            android:layout_alignBottom="@id/iv_header_radioda"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:visibility="gone"
            android:src="@drawable/selector_man" />
        <LinearLayout
            android:layout_toRightOf="@+id/iv_header_radioda"
            android:layout_marginStart="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/title_ll"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_nickname_radioda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:text="--" />



                <ImageView
                    android:id="@+id/iv_charm_allmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/iv_grade_radioda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="11sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_show_radioda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_6"
                android:background="@drawable/chart_left_bg"
                android:text="--"
                android:minWidth="50dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item_user"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:paddingVertical="@dimen/dp_8"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_header_radioda"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_head"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/iv_user_sex_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_user_header_radioda"
            android:layout_alignBottom="@id/iv_user_header_radioda"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:visibility="gone"
            android:src="@drawable/selector_man" />
        <LinearLayout
            android:layout_toLeftOf="@+id/iv_user_header_radioda"
            android:layout_marginStart="6dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/user_title_ll"
                android:layout_width="wrap_content"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_user_nickname_radioda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text="--" />


                <ImageView
                    android:id="@+id/iv_user_charm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:text="勋章"
                    android:textColor="#fff"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/user_grade_radioda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_1"
                    android:gravity="center"
                    android:visibility="invisible"

                    android:text="勋章"
                    android:textColor="#fff"
                    android:textSize="11sp" />



            </LinearLayout>


            <TextView
                android:id="@+id/tv_user_show_radioda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_6"
                android:background="@drawable/chart_right_bg"
                android:text="--"
                android:gravity="right"
                android:minWidth="50dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>