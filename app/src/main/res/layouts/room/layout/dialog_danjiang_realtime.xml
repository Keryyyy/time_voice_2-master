<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_realtime_pool"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginEnd="6dp"
            android:minWidth="@dimen/dp_90"
            android:paddingHorizontal="@dimen/dp_14"
            android:background="@drawable/bg_left_radio_red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_count"
                android:text="0"
                android:textColor="#F3D6A3"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/realtime_data"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_gift"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="58dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_fortune"
            android:src="@drawable/tv_fortune"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/ll_count"
            android:layout_marginTop="@dimen/dp_33"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:textColor="#CF2A3C"
            app:layout_constraintTop_toBottomOf="@id/rv_gift"
            android:text="@string/realtime_remark"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_close"
        android:src="@drawable/close_realtime"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_24"/>
</LinearLayout>