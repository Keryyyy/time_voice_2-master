<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_giftall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_24"
        android:src="@drawable/bg_star_all_msg"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_one_giftall"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:roundAsCircle="true"
        app:layout_constraintStart_toStartOf="@id/iv"
        app:layout_constraintTop_toTopOf="@id/iv"
        app:layout_constraintBottom_toBottomOf="@id/iv"
        android:layout_marginStart="@dimen/dp_1"/>

    <TextView
        android:id="@+id/tv_one_giftall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可乐"
        app:layout_constraintTop_toTopOf="@id/iv_one_giftall"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_one_giftall"
        android:textColor="#741CCE"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_12"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="获得"
        android:textColor="#741CCE"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_one_giftall"
        app:layout_constraintStart_toEndOf="@id/tv_one_giftall"
        app:layout_constraintEnd_toStartOf="@id/tv_number_giftall"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_number_giftall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="100"
        app:layout_constraintEnd_toStartOf="@id/textView5"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_one_giftall"
        android:textColor="#F08F1B"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="金币"
        android:textColor="#F08F1B"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_one_giftall"
        app:layout_constraintEnd_toEndOf="@id/iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>

